{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,

    // Import alias
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // Types
    "types": ["vite/client"]
  },
  "include": ["vite.config.ts"]
}
